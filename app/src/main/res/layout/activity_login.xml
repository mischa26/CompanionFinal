<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/backgroud"
        android:layout_alignParentLeft="true" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="118dp"
        android:layout_height="95dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/berkshire_swash"
        android:text="Companion"
        android:textColor="#FF4500"
        android:textSize="36sp"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/edtUser1"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="234dp"
        android:background="#fff"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName"
        android:padding="15dp"
        android:textColorHint="#808080"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/edtpass1"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtUser1"
        android:layout_centerHorizontal="true"
        android:background="#fff"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="15dp"
        android:paddingTop="20dp"
        android:textColorHint="#808080"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btnLogin2"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtpass1"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_border"
        android:text="Login"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/txtForgot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/edtUser1"
        android:layout_below="@+id/btnLogin2"
        android:text="Forgot Password?"
        android:textColor="#0000FF"
        android:textSize="15dp"
        android:layout_alignLeft="@+id/edtUser1" />

    <TextView
        android:id="@+id/txtNot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/edtUser1"
        android:layout_below="@+id/txtForgot"
        android:text="Not a member?"
        android:textSize="20sp"
        android:layout_alignLeft="@+id/edtUser1" />

    <TextView
        android:id="@+id/txtSign2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txtNot"
        android:layout_alignEnd="@+id/imageView2"
        android:text="Sign Up"
        android:textColor="#0000FF"
        android:textSize="15sp"
        android:layout_toRightOf="@id/txtNot"
        android:layout_alignRight="@+id/imageView2" />

</RelativeLayout>